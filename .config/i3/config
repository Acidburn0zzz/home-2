# bar
# workspace_auto_back_and_forth yes
#hide_edge_borders both

for_window [class="^.*"] border pixel 1
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Blueman
for_window [class="Blueman-manager"] floating enable
exec --no-startup-id /usr/bin/blueman-applet                 # Bluetooth Manager

# Colors
set        $fg #ebdbb2
set      $bold #fbf1c7
set        $bg #282828
set     $black #1d2021
set       $red #cc241d
set     $green #98971a
set    $yellow #d79921
set      $blue #458588
set   $magenta #b16286
set      $cyan #689d6a
set     $white #a89984
set     $muted #7c6f64

set   $primary   $fg
set   $secondary $green
set   $tertiary  $cyan
set   $bar_bg    $cyan

#                       Border      Background      Text        Indicator   Child
client.focused          $green      $green          $bold       $green        $fg
client.focused_inactive $bg         $black          $white      $green        $bg
client.unfocused        $bg         $black          $white      $green        $bg
client.urgent           $bg         $black          $white      $white      $red

bar {
    strip_workspace_numbers yes
    status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
    i3bar_command i3bar
    colors {
        background $bar_bg
        statusline $white
                              # Border  Background  Text
        focused_workspace     $bar_bg   $bar_bg     $green
        active_workspace      $bar_bg   $bar_bg     $yellow
        inactive_workspace    $bar_bg   $bar_bg     $muted
    }
    tray_output none
    position top
    output DP2
    #mode hide
    #font pango:Myriad Pro Regular Condensed 6.5
    font pango:Myriad Pro Regular Condensed 12
}

bar {
    strip_workspace_numbers yes
    status_command i3blocks -c ~/.config/i3blocks/i3blocks.conf
    i3bar_command i3bar 
    colors {
        background $bar_bg
        statusline $white
                              # Border      Background      Text
        focused_workspace     $bar_bg   $bar_bg     $green
        active_workspace      $bar_bg   $bar_bg     $yellow
        inactive_workspace    $bar_bg   $bar_bg     $muted
    }
    tray_output primary
    position top
    output eDP1
    #mode hide
    #font pango:Myriad Pro Regular Condensed 10
    font pango:Myriad Pro Regular Condensed 20
}
